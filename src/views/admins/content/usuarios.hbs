<div class='section-title'>
	<h1>Usuarios</h1>
	<div onclick='OpenUserCreatePopup()'>
		<span>&plus;</span>
		<p>Nuevo Usuario</p>
	</div>
</div>

<div class='section-table'>
	<div class='table-container'>
		<table class='content-table'>
			<thead>
				<tr>
					<th>Nombre</th>
					<th>Administrador</th>
					<th class='centered'>Modificar</th>
					<th class='centered'>Eliminar</th>
				</tr>
			</thead>
			<tbody>
				{{#if users}}
					{{#each users}}
						<tr>
							<td>{{name}}</td>
							<td>{{admin}}</td>
							<td class='img-column'>
								<div class='column-content'>
									<div class='square edit' onclick='OpenUserEditPopup({{id}})'>
										<img src='/img/user-gear-solid.svg' alt='modify-user' />
									</div>
								</div>
							</td>
							<td class='img-column'>
								<div class='column-content'>
									<div class='square delete' onclick='DeleteUser({{id}})'>
										<img src='/img/user-slash-solid.svg' alt='delete-user' />
									</div>
								</div>
							</td>
						</tr>
					{{/each}}
				{{/if}}
			</tbody>
		</table>
	</div>
</div>

<div class='modal' id='edit-modal'>
	<div class='modal-header'>
		<div class='title'>Edici칩n</div>
		<button onclick='ClosePopup(this)' class='close-button'>&times;</button>
	</div>
	<div class='modal-body'>
		<form action='javascript:void(0);' id='edit-form'>
			<div class='input-box'>
				<input type='text' id='edit-name' required />
				<label>Username</label>
			</div>
			<div class='input-box'>
				<input type='password' id='edit-password' required />
				<label>Ingrese nueva contrase침a</label>
			</div>
			<div class='checbox-box'>
				<input type='checkbox' id='edit-admin' />
				<label>Administrador</label>
			</div>
			<button id='modal-edit-button' type='submit' class='btn'>Confirmar</button>
		</form>
	</div>
</div>

