	<div class='modal-header'>
		<div class='title'>Creaci칩n</div>
		<button onclick='ClosePopup(this)' class='close-button'>&times;</button>
	</div>
	<div class='modal-body'>
		<form action='javascript:void(0);' id='create-form'>
			<div class='input-box'>
				<input type='text' id='create-name' required />
				<label>Username</label>
			</div>
			<div class='input-box'>
				<input type='password' id='create-password' required />
				<label>Contrase침a</label>
			</div>
			<div class='checbox-box'>
				<input type='checkbox' id='create-admin' />
				<label>Administrador</label>
			</div>
			<button id='modal-create-button' type='submit' class='btn'>Confirmar</button>
